<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.walk.EditWalkFragment">


    <TextView
        android:id="@+id/actualNameWalk"
        android:layout_width="163dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="48dp"
        android:layout_marginTop="55dp"
        android:layout_marginEnd="200dp"
        android:layout_marginBottom="657dp"
        android:text="Nome da Caminhada" />

    <TextView
        android:id="@+id/actualPhotoText"
        android:layout_width="163dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="48dp"
        android:layout_marginTop="161dp"
        android:layout_marginEnd="197dp"
        android:layout_marginBottom="551dp"
        android:text="Foto Atual" />

    <EditText
        android:id="@+id/editNameText"
        android:layout_width="258dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="46dp"
        android:layout_marginTop="92dp"
        android:layout_marginEnd="107dp"
        android:layout_marginBottom="594dp"
        android:ems="10"
        android:inputType="text"
        android:text="Name" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="205dp"
        android:layout_height="194dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="103dp"
        android:layout_marginTop="192dp"
        android:layout_marginEnd="103dp"
        android:layout_marginBottom="345dp"
        tools:src="@tools:sample/avatars" />

    <Button
        android:id="@+id/saveButton"
        android:layout_width="126dp"
        android:layout_height="58dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="142dp"
        android:layout_marginTop="427dp"
        android:layout_marginEnd="142dp"
        android:layout_marginBottom="246dp"
        android:text="Guardar Caminhada" />

</RelativeLayout>